<h3>All Categories</h3><br>

<table class="table table-hover">
 <thead class="thead-dark">
    <tr>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col"></th>
      <th scope="col">Actions</th>
      <th scope="col"></th>
    </tr>
  </thead>
 
     <% @category.each do |c| %>
    
  <%if c.user_id === current_user.id%>
   <tr>
      <td class="desc"><h4><%=  c.name %></h4></td>
        <td class="desc"><h6><%= c.description %></h6></td>
      <td><%= link_to 'Edit', edit_category_path(c), class: "btn btn-outline-secondary"%></td>
      <td><%= link_to  'Delete', category_path(c),
              method: :delete,
              data: { confirm: 'Are you sure you want this to delete?' }, class:"btn btn-outline-danger btn-rounded waves-effect" %><td>
    </tr>
  <% end %>
  <% end %>
</table>

<%= link_to 'New Category', new_category_path, class: "btn btn-outline-success" %>
<%= link_to 'New Task', new_category_task_path(:category_id), class: "btn btn-outline-success" %>
