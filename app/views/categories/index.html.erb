<h3>Categories</h3><br>
<table class="table table-hover">
 <thead class="thead-dark">
    <tr>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col"></th>
      <th scope="col">Actions</th>
      <th scope="col"></th>
    </tr>
  </thead>
 
     <% @category.each do |c| %>
   <tr>
      <td class="desc"><h4><%= c.name %></h4></td>
        <td class="desc"><h6><%= c.description %></h6></td>
      <td><%= link_to 'Edit', edit_category_path(c), class: "badge badge-pill badge-warning"%></td>
      <td><%= link_to  'Delete', delete_category_path(c),
              method: :delete,
              data: { confirm: 'Are you sure you want this to delete?' }, class: "badge badge-pill badge-danger" %><td>
      
      
    </tr>
  <% end %>
</table>


<%= link_to 'New Category', new_category_path, class: "badge badge-info" %>
<%= link_to 'Create new task', new_task_path, class: "badge badge-info" %>
 <%=link_to 'View all tasks',  tasks_path, class: "badge badge-info" %>
